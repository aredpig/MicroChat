<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5sp"
    android:id="@+id/every_tweet"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/every_pic"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/cat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="50sp" />

            <TextView
                android:id="@+id/every_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="13dp"
                android:text="TextView"
                android:textColor="#333"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/every_pic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/every_tag"
                android:layout_width="279dp"
                android:layout_height="19dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textColor="#999"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/every_pic"
                app:layout_constraintTop_toBottomOf="@+id/every_name" />

            <TextView
                android:id="@+id/every_content"
                android:layout_width="339dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/every_pic" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>